{
  "$schema": "http://json.schemastore.org/template",
  "author": "Red Cardinal Software",
  "classifications": [
    "Web",
    "API",
    "Security",
    "Authentication",
    "MFA"
  ],
  "identity": "Starbase.SecureApi",
  "name": "Starbase Secure API",
  "shortName": "starbase",
  "description": "A secure .NET API template with JWT authentication, multi-factor authentication (TOTP, WebAuthn, Email, Push), rate limiting, account lockout, and comprehensive security headers.",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "Starbase",
  "preferNameDirectory": true,
  "defaultName": "SecureApi",
  "symbols": {
    "nameLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "name",
        "toLower": true
      },
      "replaces": "starbase"
    },
    "ProjectDisplayName": {
      "type": "generated",
      "generator": "join",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "name"
          },
          {
            "type": "const",
            "value": " API"
          }
        ]
      },
      "replaces": "Starbase Template .NET API"
    },
    "ProjectTestDisplayName": {
