    },
    "JwtAudienceDev": {
      "type": "generated",
      "generator": "join",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "nameLower"
          },
          {
            "type": "const",
            "value": "-api-users-dev"
          }
        ]
      },
      "replaces": "starbase-template-api-users-dev"
    },
    "JwtAudienceTest": {
      "type": "generated",
      "generator": "join",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
