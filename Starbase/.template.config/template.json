          },
          {
            "type": "const",
            "value": " (Development)"
          }
        ]
      },
      "replaces": "Starbase Template (Development)"
    },
    "OtelSourceName": {
      "type": "generated",
      "generator": "join",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "name"
          },
          {
            "type": "const",
            "value": "API"
          }
        ]
      },
      "replaces": "StarbaseTemplateAPI"
    },
    "CacheInstanceName": {
      "type": "generated",
      "generator": "join",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "name"
          },
          {
            "type": "const",
            "value": "_"
          }
        ]
      },
      "replaces": "StarbaseTemplate_"
    },
    "OtelDevServiceName": {
      "type": "generated",
      "generator": "join",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "name"
          },
          {
            "type": "const",
            "value": "-Dev"
          }
        ]
      },
      "replaces": "StarbaseTemplate-Dev"
    },
    "nameKebab": {
      "type": "generated",
      "generator": "regex",
      "dataType": "string",
      "parameters": {
        "source": "name",
        "steps": [
          {
            "regex": "([a-z])([A-Z])",
            "replacement": "$1-$2"
          },
          {
            "regex": "([A-Z]+)([A-Z][a-z])",
            "replacement": "$1-$2"
          }
        ]
      }
    },
    "nameKebabLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "nameKebab",
        "toLower": true
      }
    },
    "HttpPort": {
      "type": "parameter",
      "datatype": "integer",
      "description": "HTTP port for development",
      "defaultValue": "5000"
    },
    "HttpsPort": {
      "type": "parameter",
      "datatype": "integer",
      "description": "HTTPS port for development",
      "defaultValue": "5001"
    },
    "IncludeDocker": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Include Docker support files",
      "defaultValue": "true"
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Skip automatic NuGet restore",
      "defaultValue": "false"
    },
    "CloudProvider": {
      "type": "parameter",
      "datatype": "choice",
      "description": "Cloud provider for secrets management",
      "defaultValue": "None",
      "choices": [
        {
          "choice": "None",
          "description": "No cloud secrets management"
        },
        {
          "choice": "Azure",
          "description": "Azure Key Vault"
        },
        {
          "choice": "AWS",
          "description": "AWS Secrets Manager"
        },
        {
          "choice": "GCP",
          "description": "Google Cloud Secret Manager"
        }
      ]
    },
    "UseAzure": {
      "type": "computed",
      "value": "(CloudProvider == \"Azure\")"
    },
    "UseAWS": {
      "type": "computed",
      "value": "(CloudProvider == \"AWS\")"
    },
    "UseGCP": {
      "type": "computed",
      "value": "(CloudProvider == \"GCP\")"
    },
    "UseCloudSecrets": {
      "type": "computed",
      "value": "(CloudProvider != \"None\")"
    },
    "DatabaseProvider": {
      "type": "parameter",
      "datatype": "choice",
      "description": "Database provider to use",
      "defaultValue": "SqlServer",
      "choices": [
        {
          "choice": "SqlServer",
          "description": "Microsoft SQL Server"
        },
        {
          "choice": "PostgreSQL",
          "description": "PostgreSQL"
        },
        {
          "choice": "Oracle",
          "description": "Oracle Database"
        }
      ]
    },
    "UseSqlServer": {
      "type": "computed",
      "value": "(DatabaseProvider == \"SqlServer\")"
    },
    "UsePostgreSql": {
      "type": "computed",
      "value": "(DatabaseProvider == \"PostgreSQL\")"
    },
    "UseOracle": {
      "type": "computed",
      "value": "(DatabaseProvider == \"Oracle\")"
    },
    "EmailProvider": {
      "type": "parameter",
      "datatype": "choice",
      "description": "Email provider for transactional emails",
      "defaultValue": "None",
      "choices": [
        {
          "choice": "None",
          "description": "Console logger only (development)"
        },
        {
          "choice": "Smtp",
          "description": "SMTP server"
        },
        {
          "choice": "SendGrid",
          "description": "SendGrid"
        },
        {
          "choice": "AwsSes",
          "description": "AWS Simple Email Service"
        },
        {
          "choice": "Postmark",
          "description": "Postmark"
        },
        {
          "choice": "Mailgun",
          "description": "Mailgun"
        },
        {
          "choice": "Mailchimp",
          "description": "Mailchimp Transactional (Mandrill)"
        }
      ]
    },
    "UseSmtp": {
      "type": "computed",
      "value": "(EmailProvider == \"Smtp\")"
    },
    "UseSendGrid": {
      "type": "computed",
      "value": "(EmailProvider == \"SendGrid\")"
    },
    "UseAwsSes": {
      "type": "computed",
      "value": "(EmailProvider == \"AwsSes\")"
    },
    "UsePostmark": {
      "type": "computed",
      "value": "(EmailProvider == \"Postmark\")"
    },
    "UseMailgun": {
      "type": "computed",
      "value": "(EmailProvider == \"Mailgun\")"
    },
    "UseMailchimp": {
      "type": "computed",
      "value": "(EmailProvider == \"Mailchimp\")"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/[Bb]in/**",
            "**/[Oo]bj/**",
            "**/.git/**",
            "**/.vs/**",
            "**/.vscode/**",
            "**/.idea/**",
            "**/node_modules/**",
            "**/*.user",
            "**/*.suo",
            "**/TestResults/**",
            "**/coverage/**",
            "**/.template.config/**",
            "Starbase.Template.csproj"
          ]
        },
        {
          "condition": "(!IncludeDocker)",
          "exclude": [
            "Dockerfile",
            ".dockerignore",
            "docker-compose.yml",
            "docker-compose.deps.yml"
          ]
        },
        {
          "condition": "(UsePostgreSql || UseOracle)",
          "exclude": [
            "**/Infrastructure/Migrations/**"
          ]
        },
        {
          "condition": "(!UseSendGrid)",
          "exclude": [
            "**/Infrastructure/Emailing/Senders/SendGridEmailSender.cs"
          ]
        },
        {
          "condition": "(!UseAwsSes)",
          "exclude": [
            "**/Infrastructure/Emailing/Senders/SesEmailSender.cs"
          ]
        },
        {
          "condition": "(!UsePostmark)",
          "exclude": [
            "**/Infrastructure/Emailing/Senders/PostmarkEmailSender.cs"
          ]
        },
        {
          "condition": "(!UseMailgun)",
          "exclude": [
            "**/Infrastructure/Emailing/Senders/MailgunEmailSender.cs"
          ]
        },
        {
          "condition": "(!UseMailchimp)",
          "exclude": [
            "**/Infrastructure/Emailing/Senders/MailchimpEmailSender.cs"
          ]
        },
        {
          "condition": "(!UseSmtp)",
          "exclude": [
            "**/Infrastructure/Emailing/Senders/SmtpEmailSender.cs"
          ]
        },
        {
          "exclude": [
            "**/WebApi.Integration.Tests/Fixtures/SqlServerContainerFixture.Local.cs"
          ]
        }
      ]
    }
  ],
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ],
  "primaryOutputs": [
    {
      "path": "Starbase.sln"
    }
  ],
